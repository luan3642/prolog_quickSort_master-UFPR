quicksort([], []).

% X e o PIVO

quicksort([X|Xs], Ys) :-
    particao(Xs,X, E, D),
    quicksort(E, S1),
    quicksort(D, S2),
    append(S1, [X|S2], Ys).

particao([], _, [], []).

particao([P|Xs], X, [P|E], D) :-
    % se o menor elemento x for menos que o PIVO ele vem para lista da esquerda
    % lista da E
    % lista da D.
    % ! cutting corta arvore, corta backtracking
    % isso aqui -> Ã© um IF em prolog
    P < X 
    particao(Xs, X, E, D).

particao([P|Xs], X, E, [P|D]) :-
    P >= X,
    particao(Xs, X, E, D).

